    <script>
        let currentElement = null;
        let elements = [];
        let snapToGrid = false;
        let gridSize = 20; // Grid size in pixels
        let currentZoomLevel = 1; // Track zoom level globally
        
        // Default elements for pages if no template exists
        const defaultElements = {
